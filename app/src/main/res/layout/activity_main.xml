<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_left"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aashish.calculator.MainActivity">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/disp"
            android:ellipsize="end"
            android:gravity="end"
            android:textSize="50sp"
            android:layout_column="1"
            android:layout_span="4" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/seven"
            android:id="@+id/seven"
            android:layout_column="1"
            android:onClick="btn7Clicked"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/eight"
            android:id="@+id/eight"
            android:layout_column="2"
            android:onClick="btn8Clicked"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/nine"
            android:id="@+id/nine"
            android:layout_column="3"
            android:onClick="btn9Clicked"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/div"
            android:id="@+id/div"
            android:layout_column="4"
            android:onClick="btndivideClicked"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/four"
            android:id="@+id/four"
            android:layout_column="1"
            android:onClick="btn4Clicked"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/five"
            android:id="@+id/five"
            android:layout_column="2"
            android:onClick="btn5Clicked"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/six"
            android:id="@+id/six"
            android:layout_column="3"
            android:onClick="btn6Clicked"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/mul"
            android:id="@+id/mul"
            android:layout_column="4"
            android:onClick="btnmultiClicked"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/one"
            android:id="@+id/one"
            android:layout_column="1"
            android:onClick="btn1Clicked"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/two"
            android:id="@+id/two"
            android:layout_column="2"
            android:onClick="btn2Clicked"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/three"
            android:id="@+id/three"
            android:layout_column="3"
            android:onClick="btn3Clicked"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/sub"
            android:id="@+id/sub"
            android:layout_column="4"
            android:onClick="btnminusClicked"/>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:id="@+id/cancel"
            android:text="@string/clear"
            android:layout_column="1"
            android:onClick="btnclearClicked"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/zero"
            android:id="@+id/zero"
            android:layout_column="2"
            android:onClick="btn0Clicked"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/equal"
            android:id="@+id/equal"
            android:layout_column="3"
            android:onClick="btnequalClicked"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="@string/add"
            android:id="@+id/add"
            android:layout_column="4"
            android:onClick="btnplusClicked"/>

    </TableRow>

</TableLayout>
